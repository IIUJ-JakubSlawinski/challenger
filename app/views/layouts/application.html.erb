<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>

  <!--<%= javascript_include_tag "application" %>-->
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Challenger", root_path, class: "brand" %>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <% if !signed_in? %>
              <li><%= link_to "Sign up", signup_path %></a></li>
              <li><%= link_to "Sign in", signin_path %></a></li>
              <li><%= link_to "Sign in with FB", "/auth/facebook" %></li>
            <% else %>
              <li><%= link_to "Profile", current_user %></a></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></a></li>
              <li><%= link_to "Sign out", signout_path, method: :delete %></a></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <div class="container">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>

    <%= yield %>

  </div>

<%= debug(params) if Rails.env.development? %>
</body>
</html>
